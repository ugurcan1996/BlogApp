@{
    ViewData["Title"] = "Index";
}

@model Category

<div class="container">

    <div class="row">
        <div class="col-4">
            @if (ViewBag.message != null)
            {
                <div class="alert alert-success my-3">
                    @ViewBag.message
                </div>
            }

            <form method="post" asp-controller="Category" asp-action="Index">

                <div class="mb-3">
                    <label for="category" class="form-label">Kategori Adı</label>
                    <input asp-for="CategoryName" type="text" class="form-control" id="category" placeholder="Kategori Adı Giriniz..">
                    <span asp-validation-for="CategoryName"></span>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" id="description" rows="3" placeholder="Açıklama Giriniz.."></textarea>
                    <span asp-validation-for="Description"></span>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success" type="submit" id="btnKaydet">
                        Kaydet
                    </button>
                </div>

            </form>
        </div>
        <div class="col-8">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Kategori Adı
                        </th>
                        <th>
                            Açıklama
                        </th>
                        <th>
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in (List<Category>)ViewBag.Categories)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>
                            <td>
                                <a class="btn btn-secondary" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">
                                    Düzenle
                                </a>
                                <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

