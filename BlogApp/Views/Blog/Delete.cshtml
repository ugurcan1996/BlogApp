
@{
    ViewData["Title"] = "Delete";
}


@model Blog

<div class="container">

    <div class="card">
        <div class="card-header">
            <h3>Kayıt Silme İşlemi</h3>
        </div>
        <div class="card-body">
            @Model.Tittle isimli kayıtı silmek istediğinize emin misiniz?
        </div>
        <div class="card-footer">
            <form method="post" asp-controller="Blog" asp-action="Delete">
                <input asp-for="Id" type="hidden" />
                <button class="btn btn-success" type="submit">
                    Onayla
                </button>
                <a asp-controller="Blog" asp-action="Index" class="btn btn-primary">
                    Vazgeç
                </a>
            </form>
        </div>
    </div>

</div>
